<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping auto-import="false">
  <class name="mat.reportmodel.Clause" table="CLAUSE" lazy="false">
	<id name="id" column="ID" >
        <generator class="uuid"/>
    </id>
	<property name="name" column="NAME" />
	<property name="description" column="DESCRIPTION" />
	<property name="measureId" column="MEASURE_ID" />
	<property name="contextId" column="CONTEXT_ID" />
	<property name="clauseTypeId" column="CLAUSE_TYPE_ID" />
	<property name="statusId" column="STATUS_ID" />
	<property name="version" column="VERSION" />
	<property name="customName" column="CUSTOM_NAME"/>
	<many-to-one name="decision" column="DECISION_ID" class="mat.reportmodel.Decision"  unique="true" lazy="false" cascade="all"/>
  </class>
</hibernate-mapping>
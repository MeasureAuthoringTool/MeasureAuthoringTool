<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">

<mapping>
	<class name="mat.client.measure.ManageMeasureDetailModel">
    <map-to xml="measure" />
	
    <field name="id"
           type="java.lang.String">
      <bind-xml name="uuid" node="element" location="measureDetails"/>
    </field>

    <field name="name"
           type="java.lang.String">
      <bind-xml name="title" node="element" location="measureDetails"/>
    </field>
    
    <field name="shortName"
           type="java.lang.String">
      <bind-xml name="shortTitle" node="element" location="measureDetails"/>
    </field>
    
    <field name="eMeasureId"
           type="integer" get-method="geteMeasureId" set-method="seteMeasureId" handler="mat.server.model.MeasureDetailsHandler">
      <bind-xml name="emeasureid" node="element" location="measureDetails"/>
    </field>    
    
    <field name="finalizedDate"
           type="java.lang.String">
      <bind-xml name="finalizedDate" node="element" location="measureDetails"/>
    </field>
    
     <field name="measureSetId"
           type="java.lang.String">
      <bind-xml name="guid" node="element" location="measureDetails"/>
    </field>
   
    <field name="versionNumberInt"
           type="integer">
      <bind-xml name="version" node="element" location="measureDetails"/>
    </field>
       
    <field name="measureStatus"
           type="java.lang.String">
      <bind-xml name="status" node="element" location="measureDetails"/>
    </field> 
    
    <field name="nqfElementTag"
           type="java.lang.String">
      <bind-xml name="nqfid" node="element" location="measureDetails" required="true">
      
      </bind-xml>
    </field> 
        
    <field name="nqfIdRoot"
           type="java.lang.String">
      <bind-xml name="root" node="attribute" location="nqfid"/>
    </field>
    
    <field name="nqfId"
           type="java.lang.String">
      <bind-xml name="extension" node="attribute" location="nqfid"/>
    </field>
    
    
    <field name="periodModel"
           type="mat.client.measure.PeriodModel">
      <bind-xml name="period" location="measureDetails"/>
    </field>
    
    <field name="measSteward" get-method="getSteward" set-method="setMeasSteward"
           type="java.lang.String">
      <bind-xml name="steward" node="element" location="measureDetails"/>
    </field>
    
    <field name="stewardUuid" 
           type="java.lang.String">
      <bind-xml name="id" node="attribute" location="steward"/>
    </field>
    
    <field name="measStewardOther"
           type="java.lang.String">
      <bind-xml name="steward" node="element" location="measureDetails"/>
    </field>
    
     <field name="authorList"
           type="mat.model.Author"
           collection="arraylist">
      <bind-xml name="developer" location="measureDetails/developers">
      	<class name="mat.model.Author">
      	
		    <field name="orgId"
		           type="java.lang.String" >
		      <bind-xml name="id" node="attribute"/>
		    </field>
		    
		    <field name="authorName"
		           type="java.lang.String">
		      <bind-xml node="text"/>
		    </field>
  		</class>
      </bind-xml>
    </field>
    
    <field name="endorsement"
           type="java.lang.String">
      <bind-xml name="endorsement" node="element" location="measureDetails" />
    </field>
    
     <field name="endorsementId"
           type="java.lang.String">
      <bind-xml name="id" node="attribute" location="endorsement" />
    </field>
    
    
    <field name="description"
           type="java.lang.String">
      <bind-xml name="description" node="element" location="measureDetails"/>
    </field>
   
    <field name="copyright"
           type="java.lang.String">
      <bind-xml name="copyright" node="element" location="measureDetails"/>
    </field>

	<field name="disclaimer"
           type="java.lang.String">
      <bind-xml name="disclaimer" node="element" location="measureDetails"/>
    </field>
    
	<field name="measScoring"
           type="java.lang.String">
      <bind-xml name="scoring" node="element" location="measureDetails"/>
    </field>
    
    <field name="scoringAbbr"
           type="java.lang.String">
      <bind-xml name="id" node="attribute" location="scoring"/>
    </field>
	    
    <field name="measureTypeList"
           type="mat.model.MeasureType"
           collection="arraylist">
      <bind-xml name="type" location="measureDetails/types">
      	<class name="mat.model.MeasureType">
		    <field name="abbrDesc"
		           type="java.lang.String" >
		      <bind-xml name="id" node="attribute"/>
		    </field>    
		    
		    <field name="description"
		           type="java.lang.String">
		      <bind-xml node="text"/>
		    </field>
  		</class>
      </bind-xml>
    </field>
    
    
    <field name="stratification"
           type="java.lang.String">
      <bind-xml name="stratification" node="element" location="measureDetails"/>
    </field>

 	<field name="riskAdjustment"
           type="java.lang.String">
      <bind-xml name="riskAdjustment" node="element" location="measureDetails" />
    </field>
    
    <field name="rateAggregation"
           type="java.lang.String">
      <bind-xml name="aggregation" node="element" location="measureDetails"/>
    </field>
    
    <field name="rationale"
           type="java.lang.String">
      <bind-xml name="rationale" node="element" location="measureDetails"/>
    </field>
    
    <field name="clinicalRecomms"
           type="java.lang.String">
      <bind-xml name="recommendations" node="element" location="measureDetails"/>
    </field>
    
    <field name="improvNotations"
           type="java.lang.String">
      <bind-xml name="improvementNotations" node="element" location="measureDetails"/>
    </field>
    
    <field name="referencesList"
           type="java.lang.String"
           collection="arraylist">
      <bind-xml name="reference" node="element" location="measureDetails/references"/>
    </field>
    
    <field name="definitions"
           type="java.lang.String">
      <bind-xml name="definitions" node="element" location="measureDetails"/>
    </field>
    
	<field name="guidance"
           type="java.lang.String">
      <bind-xml name="guidance" node="element" location="measureDetails"/>
    </field>

    <field name="transmissionFormat"
           type="java.lang.String">
      <bind-xml name="transmissionFormat" node="element" location="measureDetails"/>
    </field>
    
 	<field name="initialPatientPop"
           type="java.lang.String">
      <bind-xml name="initialPatientPopDescription" node="element" location="measureDetails"/>
    </field>   
    
    <field name="denominator"
           type="java.lang.String">
      <bind-xml name="denominatorDescription" node="element" location="measureDetails"/>
    </field>
    
    <field name="denominatorExclusions"
           type="java.lang.String">
      <bind-xml name="denominatorExclusionsDescription" node="element" location="measureDetails"/>
    </field>
   
	<field name="numerator"
           type="java.lang.String">
      <bind-xml name="numeratorDescription" node="element" location="measureDetails"/>
    </field>
    
    <field name="numeratorExclusions"
           type="java.lang.String">
      <bind-xml name="numeratorExclusionsDescription" node="element" location="measureDetails"/>
    </field>
    
    <field name="denominatorExceptions"
           type="java.lang.String">
      <bind-xml name="denominatorExceptionsDescription" node="element" location="measureDetails"/>
    </field>
    
    <field name="measurePopulation"
           type="java.lang.String">
      <bind-xml name="measurePopulationDescription" node="element" location="measureDetails"/>
    </field>
    
    <field name="measureObservations"
           type="java.lang.String">
      <bind-xml name="measureObservationsDescription" node="element" location="measureDetails"/>
    </field>
    
    <field name="supplementalData"
           type="java.lang.String">
      <bind-xml name="supplementalData" node="element" location="measureDetails"/>
    </field>
    
    <field name="groupName"
           type="java.lang.String">
      <bind-xml name="qualityMeasureSet" node="element" location="measureDetails"/>
    </field>
    
    <field name="qltyMeasureSetUuid"
           type="java.lang.String">
      <bind-xml name="uuid" node="attribute" location="qualityMeasureSet" transient="true"/>
    </field>
      
  </class>

	<class name="mat.client.measure.PeriodModel">
	    <field name="uuid"
	           type="java.lang.String">
	      <bind-xml name="uuid" node="attribute"/>
	    </field>

	    <field name="startDate"
	           type="java.lang.String">
	      <bind-xml name="startDate" node="element"/>
	    </field>
	    
	    <field name="startDateUuid"
	           type="java.lang.String">
	      <bind-xml name="uuid" node="attribute" location="startDate"/>
	    </field>
	    
	     <field name="stopDate"
	           type="java.lang.String">
	      <bind-xml name="stopDate" node="element"/>
	    </field>
	    
	     <field name="stopDateUuid"
	           type="java.lang.String">
	      <bind-xml name="uuid" node="attribute" location="stopDate"/>
	    </field>
  	</class>
</mapping>
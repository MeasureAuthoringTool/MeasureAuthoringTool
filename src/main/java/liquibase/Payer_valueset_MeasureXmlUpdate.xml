<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="mat_dev_user" id="1" context="prod">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="MEASURE_XML"/>
        </preConditions>
        <update tableName="MEASURE_XML">
            <column name="MEASURE_XML" valueComputed="REPLACE(MEASURE_XML,'&quot;Payer&quot;','&quot;Payer Type&quot;')"/>
            <where>MEASURE_ID IN (SELECT m.ID FROM MEASURE m WHERE m.MEASURE_MODEL = 'QDM' AND m.QDM_VERSION = '5.6' AND m.DRAFT = 1 AND m.LAST_MODIFIED_ON > DATE('2023-01-01'))</where>
        </update>
    </changeSet>
</databaseChangeLog>

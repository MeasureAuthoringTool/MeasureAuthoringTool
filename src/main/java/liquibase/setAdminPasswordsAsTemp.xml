<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <!-- MAT-542: Force Admin users to reset their password -->
    <!-- By setting the temp_pwd field to TRUE,
    the login service will force the user to change their password.-->
    <changeSet author="mat_dev_user" id="1" context="prod">
        <sql>
            UPDATE USER_PASSWORD SET TEMP_PWD = TRUE, CREATE_DATE = CURRENT_DATE
            WHERE USER_ID IN (SELECT USER.USER_ID FROM USER WHERE SECURITY_ROLE_ID = '1');
        </sql>
    </changeSet>

</databaseChangeLog>

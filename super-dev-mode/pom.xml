            </testResource>
        </testResources>

        <plugins>
            <plugin>
                <groupId>net.ltgt.gwt.maven</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <version>1.0.0</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>compile-gwt-harp-support</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <moduleName>mat.HarpSupport</moduleName>
                            <moduleShortName>harpsupport</moduleShortName>
                            <sourceLevel>${gwt.sourceLevel}</sourceLevel>
                            <localWorkers>10</localWorkers>
                            <optimize>0</optimize>
                        </configuration>
                    </execution>
                    <execution>
                        <id>compile-gwt-mat</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <moduleName>mat.Mat</moduleName>

	<!-- One time update all measures.  -->
	
	<bean id="onetimeMeasureXMLUpdateTask" class="mat.server.service.jobs.temprory.OnetimeMeasureXMLUpdateTask">
	    <property name="measureDAO" ref="measureDAO"/>
	    <property name="measurePackageService" ref="measurePackageService"/>
	    <property name="measureLibraryService" ref="measureLibraryService"/>
		<property name="matFlagDAO" ref="matFlagDAO"/>
	</bean>
	
	<bean id="oneTimeMeasureXMLUpdateJob" 
 	class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
	 	<property name="targetObject" ref="onetimeMeasureXMLUpdateTask" />
		<property name="targetMethod" value="updateMeasureXMLs" />
 	</bean>
 	
	<bean id="simpleTrigger" 
                class="org.springframework.scheduling.quartz.SimpleTriggerBean">
 		<property name="jobDetail" ref="oneTimeMeasureXMLUpdateJob" />
		<property name="repeatCount" value="0" />
		<property name="startDelay" value="2000" />
